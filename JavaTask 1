Program to check if the given number is even or not
package JavaTask1;

public class CheckEvenNumber {
	public static void main(String[] args) {
		int a = 10;
		
		if (a % 2 == 0) {
			
			System.out.println("The given number is even");
			
		} else {
			System.out.println("The given number is odd");
		}
		
	}

}
-------------------------------------------------------
Print alphabets
package JavaTask1;

public class Alphabets {
	
public static void main(String[] args) {
	int x;
	System.out.println("Alphabets are printed from A-Z:");
	
	for (x = 65; x <= 90; x++) {
		System.out.println((char)x +" ");
	}
	
}
}
-------------------------------------
Number Swap
package JavaTask1;

public class NumberSwap {
	public static void main(String[] args) {
		int a = 10;
		int b = 20;
		System.out.println("Before swapping value of a is " + a + " and value of b is " + b);
		a = (a + b) - (b=a);
		System.out.println("After swapping value of a is " + a + " and value of b is " + b);
	}
	}
------------------------------
Prime Number
package JavaTask1;

public class PrimeNumber {
	public static void main(String[] args) {
		int num = 31;
	    boolean flag = false;
		    if (num == 0 || num == 1) {
	        flag = true;
	    }
	    for (int i = 2; i <= num / 2; ++i) {
	      	      if (num % i == 0) {
	        flag = true;
	        break;
	      }
	    }
	    if (!flag)
	      System.out.println(num + " is a prime number.");
	    else
	      System.out.println(num + " is not a prime number.");
	  }
}
---------------------------------------------------
Factorial
package JavaTask1;

public class Factorial {
	public static void main(String[] args) {
		 int i,fact = 1;  
		  int n = 4; 
		  for(i = 1; i <= n; i++){    
		      fact=fact*i;    
		  }    
		  System.out.println("Factorial of "+n+" is: "+fact);    
		 }  
	}
