-------------------------------------------------------------
Print text 10 times
package JavaTask1;

public class PrintText {

	public static void main(String[] args) {
		
		String msg = "Welcome to Guvi";
		for (int i = 0; i < 10; i++) {
			System.out.println(msg);
		}
		
	}
}
---------------------------------------------
Senior Citizen or not
package JavaTask1;

public class SeniorCitizen {
	public static void main(String[] args) {
		int i = 30;
		int j = 70;
				if (i>=60) {
			System.out.println("The person is a Senior Citizen");
			
		} else {
			System.out.println("The person is not a Senior Citizen");
		}
				if (j>=60) {
			System.out.println("The person is a Senior Citizen");
			
		} else {
			System.out.println("The person is not a Senior Citizen");
		}
	}
}
------------------------------------------------
Number of digits
package JavaTask1;

public class DigitsInInteger {
	public static void main(String[] args) {
		int count = 0, num = 983452;

	    while (num != 0) {
	      num /= 10;
	      ++count;
	    }

	    System.out.println("Number of digits: " + count);
	}
}
